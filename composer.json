{
  "name": "forkrefactor/ddd-logging",
  "description": "This is a package to unify the logs systems in the developments of PcComponentes",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^7.4|^8.1",
    "ext-json": "*",
    "forkrefactor/ddd": "^1.0",
    "monolog/monolog": "^1.25|^2.03",
    "symfony/http-kernel": "^4.4|^5.1.5|^6.0",
    "symfony/messenger": "^4.4|^5.0|^6.0",
    "symfony/http-foundation": "^4.4|^5.0|^6.0",
    "symfony/stopwatch": "^4.4|^5.0|^6.0",
    "guzzlehttp/guzzle": "^6.5|^7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "dg/bypass-finals": "^1.1",
    "forkrefactor/coding-standard": "^1.0",
    "phpstan/phpstan": "^0.12"
  },
  "autoload": {
    "psr-4": {
      "Forkrefactor\\DddLogging\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Forkrefactor\\DddLogging\\Tests\\": "tests/"
    }
  }
}
